<%= form_for @conn, "/cart", [as: :cart], fn f -> %>
  <div class="input-group">
    <%= hidden_input f, :product_name, value: @product.name %>
    <%= hidden_input f, :pack_size, value: @product.pack_size %>
    <%= hidden_input f, :product_id, value: @product.id %>
    <%= number_input f, :quantity, value: 1, class: "form-control" %>
    <span class="input-group-btn">
      <%= submit "Add to Cart", class: "btn btn-block btn-success text-white" %>
    </span>
  </div>
<% end %>
